/* pages/components/newsList.wxss */
.contain {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.news {
  margin-top: 0rpx;
  width: 100%;
}

.footer_loading_more {
  margin-top: 10px;
  margin-bottom: 10px;
  font-size: 14px;
  text-align: center;
  color: #999;
}

.footer_loading_complete {
  margin-top: 20px;
  margin-bottom: 10px;
  font-size: 14px;
  text-align: center;
  color: #999;
}

.news_meta{
  display: flex;
  line-height: 16px;
  font-size: 12px;
  color: #999;
  align-content: justify;
  margin-top: 8px;
}

.news_type{
  flex: 1;
}

.news_date{
  flex: 2;
  text-align: right;
}

.news_title{
  font-weight: bold;
  font-size: 16px;
  color: #333;
  max-height: 40px;
  line-height: 20px;
  overflow: hidden;
}

.news_info{
  flex: 1;
}

.news_item{
  margin: 0 16px;
  padding: 12px 0;
  background: transparent;
  border-bottom: 1px solid #eee;
  display: flex;
  text-align: left;
  border-radius: 0;
}

.news_item::after{
  border: none;
}

.news_thumb{
  width: 82px;
  height: 62px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 3px;
 
}

.news_thumb image{
  width: 82px;
  height: 62px;
}

.news_item.big{
  display: block;
  
}

.news_item.big .news_thumb{
  width: 100%;
  margin-right: 0;
  margin-bottom: 8px;
  height: 153px;
}

.big .news_thumb image{
  width: 100%;
  height: 100%;
}

.btn_hover{
  opacity: .7;
}