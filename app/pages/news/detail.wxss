.news_meta{
  display: flex;
  font-size: 12px;
  color: #999;
  align-content: justify;
  margin-top: 8px;
}

.news_type{
  flex: 1;
}

.news_date{
  flex: 2;
  text-align: right;
}

.news_title{
  font-weight: bold;
  font-size: 16px;
  color: #333;
  max-height: 40px;
  line-height: 20px;
  overflow: hidden;
}

.news_info{
  flex: 1;
}

.news_item, .comment-item{
  margin: 0 16px;
  padding: 12px 0;
  border-bottom: 1px solid #eee;
  display: flex;
}

.news_item:last-child, .comment-item{
  border-bottom: none;
}

.news_thumb{
  width: 82px;
  height: 62px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 3px;
 
}

.news_thumb image{
  width: 82px;
  height: 62px;
}

.news-share {
  position: fixed;
  width: 100%;
  height: 88rpx;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  bottom: 0;
  z-index: 99;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.news-share .btns {
  height: 36px;
  display: flex;
  flex: 1;
  justify-content: space-between;
}
.news-share .btns button {
  /* color: #0492D4;
  font-size: 28rpx; */
  background: none;
  width: 36px;
  height: 36px;
  background-position: 0 0;
  background-repeat: no-repeat;
  background-size: cover;
}
.news-share .btns button::after{
  border:0
}

#btnFav{
  background-image: url(data:image/png;base64,);
}

#btnFav.active{
  background-image: url(data:image/png;base64,);
}

#btnShare{
  background-image: url(data:image/png;base64,);
}

.news-attachment{
  margin: 32rpx;
  border: 1px solid #e5e5e5;
  padding: 32rpx;
}

.news-attachment-meta{
  display: flex;
}

.news-attachment-type{
  background-color: #D0011B;
  color: #fff;
  font-size: 16px;
  width: 50px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  margin-right: 15px;
}

.news-attachment-info{
  flex: 1;
}

.news-attachment-name{
  font-size: 16px;
  color: #1a1a1a;
  height: 22px;
  line-height: 22px;
  overflow: hidden;
  margin: 2px 0 3px;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.news-attachment-size{
  font-size: 14px;
  color: #9B9B9B;
}

.news-attachment-open{
  display: block;
  width: 100%;
  border: 1px solid #0492D4;
  font-size: 16px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  margin-top: 13px;
  background-color: #fff;
  color: #0492D4;
  border-radius: 0;
}

.comment-head{
  width: 40px;
  height: 40px;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 12px;
}

.comment-head image{
  width: 40px;
  height: 40px;
}

.comment-main{
  flex: 1;
}

.comment-content{
  font-size: 14px;
  color: #333;
  margin-top: 8px;
}

.comment-date{
  font-size: 12px;
  color: #999;
}

.comment-name{
  font-size: 13px;
  font-weight: bold;
  color: #333;
  margin-bottom: 2px;
}

.comment-info{
  flex: 1;
  margin-right: 8px;
}

.comment-like-wrapper{
  position: relative;
  right: -8px;
  color: #999;
  font-size: 13px;
  display: inline-block;
  padding-right: 38px;
  line-height: 36px;
  height: 36px;
  overflow: hidden;
  background: url(data:image/png;base64,) top right no-repeat;
  background-size: auto 100%;
}

.like .comment-like-wrapper{
  color: #1E96FF;
  background-image: url(data:image/png;base64,);
}

.comment-meta{
  display: flex;
  flex-direction: row;
  align-content: center;
}

.no-comment-block{
  text-align: center;
  font-size: 14px;
  padding-bottom: 28px;
  color: #bbb;
}

.no-comment-block image{
  width: 80px;
  height: 80px;
  display: block;
  margin: 0 auto;
}

.comments-status{
  text-align: center;
  padding: 8px 0 12px;
  font-size: 14px;
  color: #bbb;
}

#comment-btn{
  margin-left: 16px;
  margin-right: 4px;
  width: 60%;
  background-color: #fafafa;
  color: #999;
  border-radius: 20px;
  height: 30px;
  line-height: 30px;
  padding-left: 16px;
  font-size: 13px;
}

.comment-view{
  position: fixed;
  overflow: hidden;
  top:1000px;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1000;
  background-color:#fff;
  border-top: 1px solid #e5e5e5;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.comment-view .header{
  display: flex;
  width: 100%;
  height: 44px;
  align-items: center;
  justify-content: center;
  
}
.comment-view .header .title{
  font-size: 16px;
  color: #333333;
  font-weight: bold;
  text-align: center;
}
.comment-view .header .cancel{
  color: #999999;
  font-size: 16px;
  position: absolute;
  left: 8px;
  background-color: transparent;
  border: none;
}
.comment-view .header .cancel::after{
  border: none;
}
.comment-view .header .send{
  color: #999999;
  font-size: 16px;
  position: absolute;
  right: 8px;
  background-color: transparent;
  border: none;
}
.comment-view .header .send::after{
  border: none;
}
.comment-view .text-input-wrapper{
  width: 100%;
  position: relative;
  overflow: hidden;
}
.comment-view .text-input-wrapper .text-input{
  width: 90%;
  margin-left: 5%;
  height: 160px;
  color: #333333;
  font-size: 14px;
  border-radius: 4px;
  border: 1px solid #e5e5e5;
  padding: 10px 10px 25px;
  box-sizing: border-box;
}
.comment-view .text-input-wrapper .count{
  margin-top: 10px;
  position: absolute;
  bottom: 5px;
  right: 7%;
  color: #CCCCCC;
  font-size: 12px;
}

