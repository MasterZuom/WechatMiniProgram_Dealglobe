/* pages/search/search.wxss */

.search-header {
  background-color: #fff;
  position: fixed;
  width: 100%;
  padding: 0 16px;
  box-sizing: border-box;
  z-index: 99;
}

.input-wraper {
  display: flex;
  background-color: #fafafa;
  border-radius: 4px;
  padding: 4px 12px;
  flex-direction: row;
  align-items: center;
}

.search_icon {
  width: 20px;
  height: 20px;
  opacity: .5;
}

.delete_icon {
  width: 20px;
  height: 20px;
}

.input-wraper input {
  margin: 0 10px;
  flex: 1;
  font-size: 14px;
}

.count-wraper {
  display: flex;
  height: 35px;
  width: 100%;
  justify-content: center;
  align-items: center;
  margin-top: 8px;
  font-size: 12px;
  color: #999;
}

.count-wraper text{
  color: #1E96FF;
  font-weight: bold;
  margin: 0 2px;
}

.search_list {
  margin-top: 72px;
}

.search_history {
  display: flex;
  margin-top: 60px;
  flex-direction: column;
  padding: 0 16px;
}

.search_history text{
  font-size: 14px;
  font-weight: bold;
  color: #666;
  margin-left: 4px;
}

.tas_wraper {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10px;
}

.tas_wraper .tags{
  margin-right: 24px;
  margin-bottom: 10px;
  background-color: #F8F8F8;
  padding: 8px 16px;
  font-size: 0;
  border-radius: 8px;
}

.search_history .tas_wraper text{
  font-size: 14px;
  color: #333;
}