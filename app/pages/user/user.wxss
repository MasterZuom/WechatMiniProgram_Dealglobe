/* pages/user/user.wxss */

#user_block{
  padding: 0 16px 40px;
}

#user_head{
  width: 60px;
  height: 60px;
  overflow: hidden;
  margin: 8px auto;
  border-radius: 50%;
  font-size: 0;
}

#user_head image{
  width: 60px;
  height: 60px;
}

#user_name{
  text-align: center;
  font-size: 18px;
  color: #333;
  font-weight: bold;
}

#user_menu{
  padding: 0 16px;
  box-sizing: border-box;
}

.user_menu_item{
  color: #333;
  font-size: 14px;
  height: 44px;
  line-height: 44px;
  padding-left: 4px;
  border-bottom: 1px solid #e5e5e5;
  position: relative;
}

.user_menu_item::after{
  content: ' ';
  width: 36px;
  height: 36px;
  display: block;
  background: url(data:image/png;base64,) 0 0 no-repeat;
  background-size: cover;
  position: absolute;
  top: 4px;
  right: -4px;
}